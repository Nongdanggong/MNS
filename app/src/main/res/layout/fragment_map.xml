<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?android:actionBarSize"
    tools:context=".Fragment.MapFragment"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <FrameLayout
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></FrameLayout>

<!--        <ImageButton-->
<!--            android:id="@+id/iV_markerOnOff"-->
<!--            android:layout_width="50dp"-->
<!--            android:layout_height="50dp"-->
<!--            android:layout_above="@+id/iV_location"-->
<!--            android:layout_alignRight="@+id/iV_location"-->
<!--            android:layout_marginBottom="20dp"-->
<!--            android:background="@drawable/round_edit_button"-->
<!--            android:src="@drawable/ic_edit"-->
<!--            app:tint="#9E9E9E" />-->

        <ImageButton
            android:id="@+id/iV_location"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_alignEnd="@id/map_view"
            android:layout_alignBottom="@id/map_view"
            android:background="@drawable/round_gps_button"
            android:src="@drawable/ic_my_location_black"
            app:tint="#9E9E9E" />

        <SlidingDrawer
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:content="@+id/content"
            android:handle="@+id/handle">

            <Button
                android:id="@+id/handle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/map"
                android:backgroundTint="@color/white"
                android:text="근처 인기 장소"
                android:textColor="@color/black"></Button>

            <LinearLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/img_3"></ImageView>
            </LinearLayout>
        </SlidingDrawer>

    </RelativeLayout>


</LinearLayout>