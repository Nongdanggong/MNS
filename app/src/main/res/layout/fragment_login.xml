<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CBFFFA"
    tools:context=".Fragment.LoginFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/main_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/login_layout_textView"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/login_layout_textView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:text="로그인 하세요"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/login_layout_edtText1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="ID"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_layout_textView"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/login_layout_edtText2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_layout_edtText1"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/login_layout_btnLogin"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/login_layout_edtText2"
        app:layout_constraintTop_toBottomOf="@id/login_layout_edtText2"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/login_layout_btnJoin"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/login_layout_edtText2"
        app:layout_constraintTop_toBottomOf="@id/login_layout_edtText2"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>