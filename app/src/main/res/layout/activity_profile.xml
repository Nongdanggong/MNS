<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/drawer_toolbar" />

    <ImageButton
        android:id="@+id/account"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/account"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.291"></ImageButton>

    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User"
        android:textSize="35sp"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/account"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        ></TextView>

    <ImageButton
        android:id="@+id/pin"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="156dp"
        android:layout_marginRight="72dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/pinwhite"
        app:layout_constraintRight_toLeftOf="@id/scrap"
        app:layout_constraintTop_toBottomOf="@id/account"></ImageButton>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 핀 관리"
        android:textSize="20sp"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/pin"
        app:layout_constraintRight_toRightOf="@id/pin"
        app:layout_constraintLeft_toLeftOf="@id/pin"
        ></TextView>

    <ImageButton
        android:id="@+id/scrap"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="132dp"
        android:layout_marginEnd="80dp"
        android:background="@android:color/transparent"
        android:padding="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bookmark_g"
        app:layout_constraintBottom_toBottomOf="@id/pin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/pin"
        app:layout_constraintRight_toLeftOf="@id/pin"
        app:layout_constraintTop_toTopOf="@id/pin"
        app:layout_constraintVertical_bias="0.0"></ImageButton>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scrap"
        android:textSize="20sp"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/scrap"
        app:layout_constraintRight_toRightOf="@id/scrap"
        app:layout_constraintLeft_toLeftOf="@id/scrap"
        ></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>